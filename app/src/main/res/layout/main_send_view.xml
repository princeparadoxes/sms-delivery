<?xml version="1.0" encoding="utf-8"?>
<ru.princeparadoxes.smsdelivery.ui.main.send.SendView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="1">


    <EditText
        android:id="@+id/send_edit_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.50"
        android:ems="10"
        android:hint="Введите сообщение"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <!--android:background="@drawable/archive_listview_element_background"-->

    <TextView
        android:id="@+id/send_number_symbols"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!--android:background="@drawable/archive_listview_element_background"-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:paddingTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/send_button_base"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Выбрать базу номеров"
                android:textColor="@android:color/black" />

            <!--android:background="@drawable/archive_listview_element_background"-->

            <Button
                android:id="@+id/send_button_send"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:text="Послать!"
                android:textColor="@android:color/black" />

            <!--android:background="@drawable/archive_listview_element_background"-->
        </LinearLayout>
    </FrameLayout>
</ru.princeparadoxes.smsdelivery.ui.main.send.SendView>