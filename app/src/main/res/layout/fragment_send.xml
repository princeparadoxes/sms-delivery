<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:padding="8dp">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:padding="10dp"
            android:text="Введите сообщение"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:id="@+id/send_edit_message"
            android:background="@drawable/background_element"
            android:layout_weight="0.50"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@drawable/background_element"
            android:id="@+id/send_number_symbols"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="25dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/background_button"
                    android:text="Выбрать базу номеров"
                    android:id="@+id/send_button_base"
                    android:textStyle="bold"
                    />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/background_button"
                    android:text="Послать!"
                    android:layout_marginTop="8dp"
                    android:id="@+id/send_button_send"
                    android:textStyle="bold"
                    />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>