<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_large_margin"
    android:orientation="vertical">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/new_contact_dialog_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_big_margin"
        android:layout_marginRight="@dimen/activity_horizontal_big_margin"
        android:hint="@string/new_contact_dialog_number_hint"
        android:inputType="phone"
        android:maxLength="15"
        android:text="8 "
        app:met_floatingLabel="highlight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_x_small_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_x_small_margin"
        android:layout_marginRight="@dimen/activity_horizontal_x_small_margin"
        android:layout_marginTop="@dimen/activity_vertical_x_small_margin"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/new_contact_dialog_cancel"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_base_dialog_cancel"/>

        <TextView
            android:id="@+id/new_contact_dialog_ok"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_base_dialog_ok"/>
    </LinearLayout>

</LinearLayout>